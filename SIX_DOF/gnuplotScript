

set terminal wxt size 1300,600 svg enhanced background rgb 'black'

set multiplot

set tics textcolor rgb "white"

set style line 4 lc rgb 'red' lt 1 lw 1
set style line 5 lc rgb 'green' lt 1 lw 1
set style line 6 lc rgb 'blue' lt 1 lw 1

set xrange[0:330]

# We need place to the left, so make the left margin 30% of screen
set lmargin screen 0.3

set xlabel "Time [sec]" textcolor rgb "orange" font ",12"



##### first plot

#set ytics 0.4
#set yrange[-1.2:1.2]

set ytics offset  -1, 0
set ylabel "Altitude [m]" offset -1, 0 textcolor rgb "red" font ",12"
#set ylabel "thtbdx" offset -1, 0 textcolor rgb "red" font ",12"

set style line 1 lt 1 lw 3 pt 3 linecolor rgb "red"
set datafile separator ","
plot  "V180VDXVDXclmam0p01.asc" using 1:6 w l ls 1 notitle
#plot  "V180qqxalpha.asc" using 1:3 w l ls 1 notitle




##### Second plot

#set ytics 1
#set yrange[-3:3]

set ytics offset  -11, 0
set ylabel "dvbe [m/sec]" offset -11, 0 textcolor rgb "green" font ",12"
#set ylabel "alphax" offset -11, 0 textcolor rgb "green" font ",12"
set style line 2 lt 1 lw 3 pt 3 linecolor rgb "green"

#set grid ls 5
set datafile separator ","
plot  "V180VDXVDXclmam0p01.asc" using 1:7 w l ls 2 notitle
#plot  "V180qqxalpha.asc" using 1:4 w l ls 2 notitle

set grid ytics lw 1 xtics lw 2
set mytics 10000
set grid lc rgb 'white'





##### Third plot
set ytics offset -22, 0
set ylabel "grndtrck [m]" offset -22, 0  textcolor rgb "blue" font ",12"
#set ylabel "alphax" offset -11, 0 textcolor rgb "blue" font ",12"

#set ylabel "qqx" offset -22, 0  textcolor rgb "blue" font ",12"

set style line 3 lt 1 lw 3 pt 3 linecolor rgb "blue"

set datafile separator ","
plot  "V180VDXVDXclmam0p01.asc" using 1:11  w l ls 3 notitle
#plot  "V180qqxalpha.asc" using 1:4 w l ls 3 notitle

#plot  "V180qqxalpha.asc" using 1:5  w l ls 3 notitle



unset multiplot
